# name: test/sql/llm.test
# description: Test llm extension
# group: [llm]

# Before we load the extension, this will fail
statement error
SELECT llm('What is the capital of France?');
----
Catalog Error: Scalar Function with name llm does not exist!

# Require statement will ensure this test is run with this extension loaded
require llm

# Confirm the extension works
query I
SELECT llm('What is the capital of France?');
----
<REGEX>:.*Paris.*

query I
SELECT llm('What is 5 plus 3?');
----
<REGEX>:.*8.*

query I
SELECT llm('Give me a valid email address format.');
----
<REGEX>:.*@.*\..*

query I
SELECT llm('Give me a valid phone number format.');
----
<REGEX>:.*\+?\d{1,3}[-.\s]?\d{1,4}[-.\s]?\d{1,4}[-.\s]?\d{1,9}.*
